// Configuration for IDEs only.
{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Needed for Moment.js since it doesn't have a default export.
    "allowSyntheticDefaultImports": true,
    "module": "System",
    "rootDir": "..",
    "baseUrl": ".",
    "paths": {
      "@gradii/cube/*": [
        "../cube/*"
      ],
      "@gradii/triangle/*": [
        "../triangle/*"
      ],
      "@gradii/triangle-icons/*": [
        "../triangle-icons/*"
      ],
      "@gradii/triangle-examples/*": [
        "../triangle-examples/*"
      ]
    }
  },
  "include": [
    "./**/*.ts"
  ]
}
