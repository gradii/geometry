load("//tools:defaults.bzl", "ng_module", "sass_binary")

package(default_visibility = ["//visibility:public"])

ng_module(
    name = "form-field",
    srcs = glob(["**/*.ts"], exclude = ["**/*.spec.ts"],),
    assets = glob(["**/*.html"]) + [
        ":dev_form_field_scss",
    ],
    deps = [
        "//src/triangle/form-field",
        "//src/triangle/select",
        "//src/triangle/input",
        "//src/triangle/radio",
        "//src/triangle/icon",
        "//src/triangle/button",
        "//src/triangle/checkbox",

        "@npm//@angular/cdk",
        "@npm//@angular/core",
        "@npm//@angular/forms",
        "@npm//@angular/router",
    ],
)

sass_binary(
    name = "dev_form_field_scss",
    src = "dev-form-field.scss",
)
