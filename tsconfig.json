{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom",
      "es2016.array.include"
    ],
    "baseUrl": ".",
    "paths": {
      "@gradii/*": [
        "libs/*"
      ],
      "@gradii/triangle/*": [
        "libs/triangle/*/public-api.ts"
      ],
      "@gradii/triangle/*/testing": [
        "libs/triangle/*/testing/public-api.ts"
      ]

    },
    "module": "es2015"
  },
  "exclude": [
    "node_modules",
    "tmp",
    "triangle-ui",
    "tools",
    "dist"
  ]
}