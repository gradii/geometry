package(default_visibility = ["//visibility:public"])

load(
    "//tools:defaults.bzl",
    "ng_module",
    "sass_binary",
    "sass_library",
    #  "ng_test_library",
    #  "ng_web_test_suite",
    #  "markdown_to_html"
)

ng_module(
    name = "affix",
    srcs = glob(
        ["**/*.ts"],
        exclude = ["**/*.spec.ts"],
    ),
    assets = [":style/affix.css"] + glob(["**/*.html"]),
    module_name = "@gradii/triangle/affix",
    deps = [
        "//src/triangle/core",
        "//src/triangle/i18n",
        "//src/triangle/util",
        "@npm//@angular/animations",
        "@npm//@angular/cdk",
        "@npm//@angular/common",
        "@npm//@angular/core",
        "@npm//@angular/forms",
        "@npm//rxjs",
    ],
)

sass_library(
    name = "affix_scss_lib",
    srcs = glob(["**/_*.scss"]),
    deps = ["//src/triangle/core:core_scss_lib"],
)

sass_binary(
    name = "affix_scss",
    src = "style/affix.scss",
    deps = [
        "//src/triangle/affix:affix_scss_lib",
    ],
)

