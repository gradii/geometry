load("@npm//scss-bundle:index.bzl", "scss_bundle")
load(
    "//src/diagram:config.bzl",
    "DIAGRAM_ENTRYPOINTS",
    "DIAGRAM_SCSS_LIBS",
    "DIAGRAM_TARGETS",
)
load("//tools:defaults.bzl", "ng_package", "ts_library")

package(default_visibility = ["//visibility:public"])

ts_library(
    name = "diagram",
    srcs = ["index.ts"],
    module_name = "@gradii/diagram",
