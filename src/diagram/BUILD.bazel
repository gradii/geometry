    name = "npm_package",
    srcs = [
        "package.json",
    ],
    data = [
    ] + DIAGRAM_SCSS_LIBS,
    entry_point = ":index.ts",
    entry_point_name = "diagram",
    nested_packages = [],
    tags = ["release-package"],
    deps = DIAGRAM_TARGETS,
)
